model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String?  @unique
  phone     String
  name      String
  password  String
  orders    Order[]
  createdAt DateTime @default(now())
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Order {
  id          String      @id @default(uuid())
  user        User        @relation(fields: [userId], references: [id])
  userId      String
  serviceType String
  status      OrderStatus @default(RECEIVED)
  notes       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum OrderStatus {
  RECEIVED
  IN_PROGRESS
  READY_FOR_PICKUP
  COMPLETED
  CANCELLED
}